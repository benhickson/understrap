{
	"browserSyncOptions": {
		"proxy": "localhost/",
		"notify": false
	},
	"browserSyncWatchFiles": [
		"./css/*.min.css",
		"./js/*.min.js",
		"./**/*.php"
	],
	"paths": {
		"js": "./js",
		"css": "./css",
		"img": "./images",
		"fonts": "./fonts",
		"imgsrc": "./src/images",
		"node": "./node_modules",
		"bower": "./bower_components",
		"vendor": "./vendor",
		"dev": "./src",
		"devscss": "./src/scss",
		"devjs": "./src/js",
		"devfonts": "./src/fonts",
		"dist": "./dist"
	}
}